<%- include('partials/headerforLogin') -%>
<div class="container">
  <a href="/Home"><i class="fa-sharp fa-solid fa-house fa-lg"></i></a>
  <div class="row mt-5">
      <div class="col-6">
          <div>
              <p><strong>User Name</strong>: <%= user.userName %></p>
              <p><strong>Email</strong>: <%= user.email %></p>
              <a href="/logout" class="col-3 btn btn-primary">Logout</a>
          </div>
      </div>
      
      <div class="col-6">
        <div class="row justify-content-center mt-5">
          <a class="btn btn-primary" href="/Home">My recent Blogs</a>
        </div>  
        <ul class="row list-unstyled">
        <% for(var i=0; i<blogs.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <a href="/blog/<%= blogs[i]._id%>">
              <img class="img-fluid" src="<%= blogs[i].image%>">
            </a>
          </li>
        <% } %>
        </ul>
        
      </div>  
    </div>
  </div>
</div>
<%- include('partials/footer') -%>