<%- include('partials/header') -%>
<div class="container">
  <a href="/Home"><i class="fa-sharp fa-solid fa-house fa-lg"></i></a>
    <div class="row mt-5">
        <div class="col-6">
            <div>
                <p><strong>User Name</strong>: <%= user.userName %></p>
                <p><strong>Email</strong>: <%= user.email %></p>
                <a href="/logout" class="col-xs-3 btn btn-primary">Logout</a>
            </div>
            <div class="mt-5">
              <h2 style="margin-left: 0;color:black">Add a blog</h2>
              <form action="/blog/createBlog" enctype="multipart/form-data" method="POST">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" id="title" name="title">
                </div>
                <div class="mb-3">
                  <label for="caption" class="form-label">Caption</label>
                  <textarea class="form-control" id="caption" name="caption"></textarea>
                </div>
                <div class="mb-3">
                  <label for="imgUpload" class="form-label">Image</label>
                  <input type="file" class="form-control" id="imageUpload" name="file">
                </div>
                <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
              </form>
            </div>
        </div>
        <div class="col-6">
            <h3>Recent Blogs</h3>
          <ul class="row list-unstyled">
          <% for(var i=0; i<blogs.length; i++) {%>
            <li class="col-6 justify-content-between mt-5">
              <a href="/blog/<%= blogs[i]._id%>">
                <img class="img-fluid" src="<%= blogs[i].image%>">
              </a>
            </li>
          <% } %>
          </ul>
          <div class="row justify-content-center mt-5">
            <a class="btn btn-primary" href="/home">Return to Feed</a>
          </div>  
        </div>  
      </div>
    </div>
  </div>
<%- include('partials/footer') -%>